{
	"name": "babylon-reader",
	"version": "0.1.0",
	"private": false,
	"description": "A Bible reader with badges for our Babylon series.",
	"repository": "https://github.com/flatlandchurch/babylon-reader",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/main.js",
	"scripts": {},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^16.3.3",
		"ava": "^3.15.0",
		"cheerio": "^1.0.0-rc.10",
		"globby": "^11.0.4",
		"husky": "^7.0.1",
		"just-flatten": "^1.0.0",
		"lint-staged": "^11.0.1",
		"pipr": "^1.0.0",
		"prettier": "^2.3.2",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	}
}
